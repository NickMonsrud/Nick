<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.viauc.nick.firsthandin.LaunchInformation"

    android:background="@drawable/bg_port">

    <!--Header-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alice In Wonderland"
        android:textSize="35sp"
        android:textColor="#FF88FF"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />


    <!-- Button Back-->
    <Button
        android:id="@+id/bback"
        android:text="@string/back"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#ff9933" android:padding="10dp"
        android:layout_above="@+id/bI"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/about"
        android:layout_alignRight="@+id/about"
        android:onClick="MainActivity"
        />


    <!--Text field-->
    <EditText
        android:layout_width="305dp"
        android:layout_height="250dp"
        android:background="#ff9933"
        android:id="@+id/about"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="This is a field with information."

        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        />
    <!--Information Button-->
    <Button
        android:id="@+id/bI"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/info"
        android:onClick="LaunchInformation"
        />

</RelativeLayout>
